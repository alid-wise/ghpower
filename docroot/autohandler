<%args>
        $dbname => 'ghpower'
</%args>
<%init>
use DBI;
use utf8;
use open qw(:std :utf8);
use strict;

my $dbh = DBI->connect("dbi:Pg:dbname=$dbname", "", "", {RaiseError => 1, pg_enable_utf8 => 1});
my $sth = $dbh->prepare("select A.id,A.name,A.login,A.email,A.modtime,A.gid,G.name AS group from auth A inner join groups G on A.gid = G.id WHERE A.login=? AND active=1");
my $auth;
if($sth->execute($ENV{REMOTE_USER})) {
	$auth = ($sth->fetchrow_hashref);
}
$sth->finish;
$r->content_type(q{text/html; charset=utf-8});
</%init>
<html>
<head>
	<meta http-equiv=Content-Type content="text/html;charset=UTF-8">
	<meta http-equiv=Pragma Content="no-cache">
	<title>Green Hill</title>
	<link href="/css/bootstrap.css" rel="stylesheet">
%#	<script src="/js/jquery.js"></script>
%#	<script src="/js/bootstrap.js"></script>
	<LINK REL="stylesheet" TYPE="text/css" HREF="/ghpower.css">
</head>
<body>
<% $m->call_next( dbh=>$dbh, auth=>$auth)%>
</body>
</html>

